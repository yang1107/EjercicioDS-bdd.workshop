@{
    <table class="table-bordered text-center">
        <thead>
            <tr>
                <th scope="col">Info about Number</th>
                <th scope="col">Prime Number</th>
                <th scope="col">Not a Prime Number</th>
                <th scope="col">Undefined</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="theNumber">@ViewData["Number"]</td>
                <td id="isPrimeNumber">@ViewData["IsPrimeNumber"]</td>
                <td id="IsNotPrimeNumber">@ViewData["IsNotPrimeNumber"]</td>
                <td id="IsUndefined">@ViewData["IsUndefined"]</td>
        </tbody>
    </table>
}