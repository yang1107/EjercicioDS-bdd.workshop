@{
    <table class="table-bordered">
        <thead>
            <tr>
                <th scope="col">Number A</th>
                <th scope="col">Operator</th>
                <th scope="col">Number B</th>
                <th scope="col"></th>
                <th scope="col">Result</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td id="theA">@ViewData["a"]</td>
                <td id="theOperation">@ViewData["operation"]</td>
                <td id="theB">@ViewData["b"]</td>
                <td>=</td>
                <td id="theResult">@ViewData["result"]</td>
            </tr>
        </tbody>
    </table>
}
